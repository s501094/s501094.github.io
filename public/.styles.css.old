* {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}

body {
	background-color: #1a1a1a;
	color: #fff;
	text-align: center;
	font-family: Arial, sans-serif;
}

h1 {
	font-size: 2em;
	margin-bottom: 20px;
	text-shadown: 1px 1px 1px #000;
}

h2 {
	font-size: 2em;
	text-shadow: 1px 1px 1px #000;
}

#video-background {
	position: fixed;
	top: -50%;
	left: -50%;
	width: 200%;
	height: 200%;
}

#video-background #player {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	margin: auto;
	min-width: 50%;
	min-height: 50%;
	pointer-events: none;
}

#content {
	position: relative;
	z-index: 1;
	text-align: center;
	color: #fff;
	padding: 50px;
}

#player {
	margin-top: 50px;
}

#controls {
	margin-top: auto;
}

button {
	padding: 10px 20px;
	background-color: rgba( 41, 41, 41, 0.9);
	color: rgba(0, 0, 0, 0.9);
	border: 1px solid rgba(255, 255, 255, 0.07);
	margin: 2 5px;
	cursor: pointer;
	font-size: 1em;
	border-radius: 20px;
}

button:hover {
	box-shadow: 12px 12px 12px rgba(103, 103, 103, 0.5);
	background-color: rgba(47, 47, 47, 0.5);
	color: rgba(255, 255, 255, 0.9);
}

#volume-control {
	margin-top: 20px;
}

#volume-control input {
	width: 100px;
}

#volume {
	margin-top: 20px;
	width: 200px;
	margin: 0 auto;
}

#content, #controls, #volume-control {
	position: relative;
	z-index: 2;
}




body::after {
	content: '';
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: rgba(0, 0, 0, 0.5);
	pointer-events: none;
	z-index: 1;
}
